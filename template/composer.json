{
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "alpha",
    "repositories": [
        {
            "type":"package",
            "package": {
                "name": "dev-lucid/html",
                "version":"master",
                "source": {
                    "url": "https://github.com/Dev-Lucid/html.git",
                    "type": "git",
                    "reference":"master"
                },
                "bin": [
                ],
                "autoload": {
                    "psr-4": {"Lucid\\Html\\": "/"}
                },
                "autoload-dev": {
                    "psr-4": {"Lucid\\Html\\": "/"}
                }
            }
        },

        {
            "type":"package",
            "package": {
                "name": "twbs/bootstrap",
                "version": "4.0.0-alpha.2",
                "source": {
                    "url": "https://github.com/twbs/bootstrap.git",
                    "type": "git",
                    "reference":"v4-dev"
                }
            }
        }
    ],
    "require":{
        "php": "^7.0",
        "ext-pdo_sqlite": "*",
        "monolog/monolog": "^1.17",
        "fortawesome/font-awesome": "^4.5",
        "twbs/bootstrap": "4.0.0-alpha.2",
        "dev-lucid/lucid": "master@dev",
        "dev-lucid/html": "master@dev",
        "robmorgan/phinx": "0.5.3",
        "swiftmailer/swiftmailer": "5.4.1",
        "kartik-v/php-date-formatter": "@dev",
        "tedivm/jshrink": "~1.0",
        "stephanecollot/datetimepicker-bundle":"1.0.1",
    },
    "require-dev":{
        "phpunit/phpunit": "^5.0"
    },
    "scripts": {
        "post-install-cmd": [
         ]
   },
   "autoload": {
       "psr-4": {"App\\": "app/baseClasses/"}
   }
}
